    <script>
        // Animasi tambahan untuk interaktivitas
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseover', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                button.addEventListener('mouseout', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Efek klik pada tombol pencarian
            const searchButton = document.getElementById('searchButton');
            searchButton.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
                
                // Fungsi pencarian
                const query = document.getElementById('searchInput').value.trim();
                if (query) {
                    window.location.href = `https://www.google.com/search?q=${encodeURIComponent(query)}+site:ditss.biz.id`;
                }
            });
            
            // Pencarian dengan tombol Enter
            document.getElementById('searchInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    const query = this.value.trim();
                    if (query) {
                        window.location.href = `https://www.google.com/search?q=${encodeURIComponent(query)}+site:ditss.biz.id`;
                    }
                }
            });
            
            // Efek parallax untuk matahari
            document.addEventListener('mousemove', e => {
                const moveX = (e.clientX / window.innerWidth - 0.5) * 10;
                const moveY = (e.clientY / window.innerHeight - 0.5) * 10;
                document.querySelector('.sun').style.transform = `translate(${moveX}px, ${moveY}px) scale(1.1)`;
            });
        });
    </script>
